	<select id="failSmsList"  resultMap="resultMessageVO">
		SELECT 
			seqno,
			destno,
			callback,
			auto_send_id,
			auto_send_yn,
			ifnull(send_count,0)+1 as send_count,
			type,
			msg,
			title
		FROM
			SOMQ_LOG
		WHERE	1=1
			AND ifnull(send_count,0) &lt; CAST((SELECT ADD_VAL1 FROM spb.TB_SYS_COM_CD WHERE COM_CD ='MSI_016') AS UNSIGNED)
			AND ifnull(auto_send_yn,'N') = 'N'
			AND ((type = 'S' AND result &gt; 6) OR (type = 'M' AND result &gt; 1000)) 
	</select>
	
	<update id="updateAutoSendResult" parameterType="smsMessageVO">
		UPDATE
			SOMQ_LOG
		SET
			auto_send_yn = 'Y'
		WHERE
			seqno = #{seqno}
	</update>
	
